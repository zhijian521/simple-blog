{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "vite.config.ts",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "scripts/**/*.ts",
    "../config/**/*.ts"
  ]
}
