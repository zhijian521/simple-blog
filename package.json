{
  "name": "simple-blog",
  "version": "1.0.1",
  "author": "zhijian521",
  "type": "module",
  "scripts": {
    "sync-images": "tsx app/scripts/sync-images.ts",
    "fetch-git": "tsx app/scripts/fetch-git-activity.ts",
    "ensure-ids": "tsx app/scripts/ensure-article-ids.ts",
    "generate-article-index": "tsx app/scripts/generate-article-index.ts",
    "generate-sitemap": "tsx app/scripts/generate-sitemap.ts",
    "prepare": "npm run sync-images && npm run fetch-git && npm run ensure-ids && npm run generate-article-index",
    "prepare:build": "npm run sync-images && npm run ensure-ids && npm run generate-article-index && npm run generate-sitemap",
    "dev": "npm run prepare && vite --config app/vite.config.ts",
    "build": "npm run prepare:build && vite-ssg build --config app/vite.config.ts",
    "preview": "vite-ssg preview --config app/vite.config.ts",
    "format": "prettier --config app/.prettierrc --ignore-path app/.prettierignore --write .",
    "lint": "eslint --config app/eslint.config.js ."
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "@vueuse/core": "^14.1.0",
    "dompurify": "^3.3.1",
    "isomorphic-dompurify": "^2.29.0",
    "front-matter": "^4.0.2",
    "markdown-it": "^14.0.0",
    "shiki": "^3.21.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vueuse/head": "^2.0.0",
    "chokidar": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.52.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^1.2.0",
    "vite-ssg": "^28.2.2",
    "vue-tsc": "^1.8.0"
  }
}
